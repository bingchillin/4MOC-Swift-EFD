# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  desc "Build and test"
  lane :ios_test do
    begin
      scan(
        include_simulator_logs: false,
        scheme: "EFD",
        output_types: "html"
      )
    rescue => error
      UI.error("Une erreur s'est produite lors de l'ex√©cution des tests : #{error.message}")
      raise error
    end
  end

  desc "Build and test IPA"
  lane :beta do
    increment_build_number
    match(type: "adhoc")
    gym(export_method: "ad-hoc")
  
    upload_to_testappio(
      api_token: "$TESTAPPIO_API_TOKEN",
      app_id: "$TESTAPPIO_APP_ID",
      release: "ios",
      ipa_file: "./EFD/build/EFD.ipa",
      release_notes: "Manual release notes for iOS",
      git_release_notes: true,
      git_commit_id: false,
      notify: false
    )
    
    clean_build_artifacts #optional
    
  end

end
